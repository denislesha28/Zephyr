@page "/profile/{UserId}"
@using Zephyr.Components.Controls.Feed

<div Style="max-width: 600px; background-color: transparent; margin-left:auto; margin-right:auto;">
    @if (IsLoading)
    {
        <p>Loading ...</p>
    }
    else
    {
        <User UserData="_userViewModel"></User>
        @foreach (var post in _postViewModelList)
        {
            <PostItem Data="post"></PostItem>
        }
    }
</div>