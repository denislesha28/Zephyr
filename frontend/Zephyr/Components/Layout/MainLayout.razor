@inherits LayoutComponentBase
<RadzenLayout Style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'">
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="ToggleSidebar"/>
            <RadzenLabel Text="Zephyr"/>
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Expanded="SidebarExpanded" Responsive="false">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path=""/>
            @if (UserLoggedIn)
            {
                <RadzenPanelMenuItem Text="@UserName" Icon="account_box" Path="@UserPath" />
                <RadzenPanelMenuItem Text="Log out" Path="logout" Icon="input" />
            }
            else
            {
                <RadzenPanelMenuItem Text="Log in" Icon="account_box" Path="signin"/> 
            }
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        @Body
    </RadzenBody>
</RadzenLayout>
<RadzenNotification />
